<script>
  // Client-side language detection and redirect
  function detectLanguageAndRedirect() {
    // Get browser language
    const browserLang = navigator.language || navigator.languages?.[0] || 'en';
    
    // Map browser languages to supported languages
    const supportedLangs = ['en', 'zh'];
    let targetLang = 'en'; // default
    
    // Check if browser language matches supported languages
    if (browserLang.startsWith('zh')) {
      targetLang = 'zh';
    } else if (browserLang.startsWith('en')) {
      targetLang = 'en';
    }
    
    // Redirect to the appropriate language version
    window.location.href = `/${targetLang}/`;
  }
  
  // Run detection on page load
  detectLanguageAndRedirect();
</script>

<noscript>
  <!-- Fallback for users with JavaScript disabled -->
  <meta http-equiv="refresh" content="0; url=/en/">
</noscript>

